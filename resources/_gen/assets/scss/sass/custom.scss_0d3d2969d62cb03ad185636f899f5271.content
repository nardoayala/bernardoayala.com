.container{max-width:850px;margin-top:0}.header-container{display:flex;align-items:center;justify-content:space-between;margin:auto;padding:0 2rem;height:160px;max-width:850px}.header nav li{margin:0}.header nav li a{font-size:1.05rem;font-weight:400;padding:0.75rem;color:rgba(0,0,0,0.6);line-height:1.2;text-align:center;border-radius:4px}.header nav li a:hover{background-color:#f2f2f2}.brand{display:flex;align-items:center}.brand a{color:#333333}.brand a:hover{color:black}.brand .avatar{margin:0}.brand .avatar img{margin:0 1rem 0 0;max-height:25px;width:auto;border-radius:0}.brand .site-title{margin:0}.lead{display:flex;align-items:center;padding:0 2rem}.lead .greeting{flex:2 1;margin-right:3rem}.lead .profile img{border-radius:50%;max-width:250px;flex:1 1}.post{margin-top:2rem;padding:0 2rem}.recent-posts.section{margin-top:2rem;padding:0 2rem}.recent-posts.section h2{color:#111111}.recent-posts.section .post{margin:0;padding:0.75rem 1rem 0.75rem 0;box-sizing:border-box;align-items:center;display:grid;grid-template-columns:50px 2fr}.recent-posts.section .post img{margin:0;width:30px;height:30px}.recent-posts.section .post .title.small{color:#444444;margin:0}.recent-posts.section .posts a:hover .post{background-color:#f2f2f2}
